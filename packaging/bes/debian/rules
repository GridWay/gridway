#!/usr/bin/make -f
# -*- makefile -*-

INSTALLDIR = $(CURDIR)/debian/gridway-bes

_prefix = /usr
_bindir = $(_prefix)/bin
_sbindir = $(_prefix)/sbin
_libdir = $(_prefix)/lib
_datadir = $(_prefix)/share
_mandir = $(_datadir)/man
_docdir = $(_datadir)/doc/gridway-5.10.0

GW_LOCATION := $(INSTALLDIR)/usr

configure: configure-stamp

configure-stamp:

build: build-arch build-indep

build-arch: build-stamp

build-indep: build-stamp

build-stamp: configure-stamp
	dh_testdir
	
	$(MAKE) -C src/em_mad/bes/
	$(MAKE) -C src/tm_mad/dummy/

clean:	
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp
	if [ -r Makefile ] ; then $(MAKE) -C src/em_mad/bes/ clean ; fi
	if [ -r Makefile ] ; then $(MAKE) -C src/tm_mad/dummy/ clean ; fi
	dh_clean


install: build-stamp
	dh_testdir
	dh_testroot
	dh_clean -k

	export GW_LOCATION=$(GW_LOCATION)
	mkdir -p $(INSTALLDIR)/usr/bin
	mkdir -p $(INSTALLDIR)/usr/lib
	$(MAKE) install -C src/em_mad/bes/ DESTDIR=$(INSTALLDIR)  
	$(MAKE) install -C src/tm_mad/dummy/ DESTDIR=$(INSTALLDIR)

binary: binary-arch binary-indep

binary-arch: install
	dh_testdir
	dh_testroot
	dh_installchangelogs -a
	dh_install -a
	dh_installman -a
	dh_installinit -a
	dh_link -a
	dh_compress -a
	dh_fixperms -a
	dh_perl -a
	dh_makeshlibs -a
	dh_installdeb -a
	dh_gencontrol -a
	dh_md5sums -a
	dh_builddeb -a

binary-indep: install
	dh_testdir
	dh_testroot
	dh_installdocs -i
	dh_installchangelogs -i
	dh_install -i
	dh_installman -i
	dh_installinit -i
	dh_link -i
	dh_compress -i -X .tag
	dh_fixperms -i
	dh_perl -i
	dh_installdeb -i
	dh_gencontrol -i
	dh_md5sums -i
	dh_builddeb -i

.PHONY: binary binary-arch binary-indep build build-arch build-indep clean configure install
