#!/usr/bin/make -f
# -*- makefile -*-

INSTALLDIR = $(CURDIR)/debian/gridway-gt5

_version = 5.12.RC1
_prefix = /usr
_bindir = $(_prefix)/bin
_sbindir = $(_prefix)/sbin
_libdir = $(_prefix)/lib
_datadir = $(_prefix)/share
_mandir = $(_datadir)/man
_docdir = $(_datadir)/doc/gridway-$(_version)

DEB_HOST_ARCH_CPU ?= $(shell dpkg-architecture -qDEB_HOST_ARCH_CPU)
GW_LOCATION := $(INSTALLDIR)/usr

ifneq (,$(filter $(DEB_HOST_ARCH_CPU), amd64 alpha ia64 s390x ppc64 sparc64))
flavor = gcc64
else
flavor = gcc32
endif

configure: configure-stamp

configure-stamp: patch
	# cp -p gridway-5.12.RC1/packaging/gt5/RPM/README gridway-5.12.RC1/README

patch: patch-stamp

patch-stamp:
	dpatch apply-all
	dpatch cat-all >patch-stamp

build: build-arch build-indep

build-arch: build-stamp

build-indep: build-stamp

build-stamp: configure-stamp
	dh_testdir
	
	globus-makefile-header --flavor=$(flavor) globus_gram_client > src/em_mad/gram5/makefile-header
	$(MAKE) -C src/em_mad/gram5/
	globus-makefile-header --flavor=$(flavor) globus_gass_copy > src/tm_mad/gridftp/makefile-header
	$(MAKE) -C src/tm_mad/gridftp/

clean:	clean-patched unpatch

clean-patched:
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp
	if [ -r Makefile ] ; then $(MAKE) -C src/em_mad/gram5/ clean ; fi
	if [ -r Makefile ] ; then $(MAKE) -C src/tm_mad/gridftp/ clean ; fi
	dh_clean

unpatch:
	dpatch deapply-all
	rm -rf patch-stamp debian/patched

install: build-stamp
	dh_testdir
	dh_testroot
	dh_clean -k

	export GW_LOCATION=$(GW_LOCATION)
	mkdir -p $(INSTALLDIR)/usr/bin
        mkdir -p $(INSTALLDIR)/usr/share/doc/gridway-gt5/
        cp README $(INSTALLDIR)/usr/share/doc/gridway-gt5/

	$(MAKE) install -C src/em_mad/gram5/ DESTDIR=$(INSTALLDIR)  
	$(MAKE) install -C src/tm_mad/gridftp/ DESTDIR=$(INSTALLDIR)

binary: binary-arch binary-indep

binary-arch: install
	dh_testdir
	dh_testroot
	dh_installchangelogs -a
	dh_install -a
	dh_installman -a
	dh_installinit -a
	dh_link -a
	dh_compress -a
	dh_fixperms -a
	dh_perl -a
	dh_makeshlibs -a
	dh_installdeb -a
	dh_gencontrol -a
	dh_md5sums -a
	dh_builddeb -a

binary-indep: install
	dh_testdir
	dh_testroot
	dh_installdocs -i
	dh_installchangelogs -i
	dh_install -i
	dh_installman -i
	dh_installinit -i
	dh_link -i
	dh_compress -i -X .tag
	dh_fixperms -i
	dh_perl -i
	dh_installdeb -i
	dh_gencontrol -i
	dh_md5sums -i
	dh_builddeb -i

.PHONY: binary binary-arch binary-indep build build-arch build-indep clean configure patch install
